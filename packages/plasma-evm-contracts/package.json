{
  "name": "@tokamak-network/plasma-evm-contracts",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "artifacts/contracts/**/*.json"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "yarn build:contracts && yarn autogen:artifacts && yarn build:typescript",
    "build:contracts": "hardhat compile --show-stack-traces",
    "build:typescript": "tsc -p ./tsconfig.json",
    "clean": "rm -rf ./dist ./artifacts ./cache ./tsconfig.tsbuildinfo",
    "compile": "truffle compile",
    "console": "truffle console",
    "console:faraday": "truffle console --network faraday",
    "autogen:artifacts": "ts-node scripts/generate-artifacts.ts",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solium -d .",
    "lint:sol:fix": "solium -d . --fix",
    "run:testrpc": "bash ./run.testrpc.sh",
    "test": "npx hardhat test --show-stack-traces",
    "test:logtx": "LOGTX=true npm run test",
    "test:verbose": "VERBOSE=true npm run test",
    "test:verbose:logtx": "VERBOSE=true LOGTX=true npm run test",
    "test:stake": "mocha --exit --bail --recursive test/stake --timeout 600000",
    "test:stake:compile": "npm run compile && npm run test:stake"
  },
  "dependencies": {
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^2.5.1",
    "axios": "^0.19.1",
    "chai-bytes": "^0.1.1",
    "hardhat": "^2.3.0",
    "rlp": "^2.1.0"
  },
  "devDependencies": {
    "@makerdao/currency": "^0.9.10",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/test-environment": "^0.1.1",
    "@openzeppelin/test-helpers": "^0.5.4",
    "chai": "^4.2.0",
    "chai-bn": "^0.1.1",
    "coinage-token": "0.0.8-rc.1",
    "coveralls": "^3.0.1",
    "dotenv": "^9.0.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eth-block-tracker": "^4.4.2",
    "eth-gas-reporter": "^0.1.12",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-abi": "^0.6.5",
    "ethjs-abi": "^0.2.1",
    "ethlint": "^1.2.5",
    "ganache-cli": "^6.7.0",
    "hardhat": "^2.11.2",
    "hardhat-deploy": "^0.11.15",
    "husky": "^6.0.0",
    "lodash": "^4.17.15",
    "mocha": "^7.0.0",
    "openzeppelin-test-helpers": "^0.4.2",
    "solidity-util": "github:willitscale/solidity-util",
    "solium": "^1.2.4",
    "ts-node": "^10.9.1"
  }
}
